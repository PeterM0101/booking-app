# Ignore node_modules in both Backend, frontend, and client
Backend/node_modules
frontend/node_modules
client/node_modules

# Ignore environment variable files in both Backend, frontend, and client
Backend/.env*
frontend/.env*
client/.env*
!Backend/.env.example   # Keep .env.example if you have a sample environment file in Backend
!frontend/.env.example # Keep .env.example if you have a sample environment file in frontend
!client/.env.example   # Keep .env.example if you have a sample environment file in client

# Ignore build output (Next.js) in frontend and client
frontend/.next
client/.next

# Ignore build cache
Backend/.turbo
frontend/.turbo
client/.turbo

# IDE/editor-specific files
Backend/.idea
Backend/.vscode
frontend/.idea
frontend/.vscode
client/.idea
client/.vscode

# Ignore ESLint cache
Backend/.eslintcache
frontend/.eslintcache
client/.eslintcache

# Ignore Tailwind and other generated config files (if applicable)
# Include if you generated these automatically but are not customizing them
# frontend/tailwind.config.js
# client/tailwind.config.js

# Ignore TypeScript build artifacts (if applicable)
Backend/*.tsbuildinfo
frontend/*.tsbuildinfo
client/*.tsbuildinfo

# Logs
Backend/npm-debug.log*
Backend/yarn-debug.log*
Backend/yarn-error.log*
frontend/npm-debug.log*
frontend/yarn-debug.log*
frontend/yarn-error.log*
client/npm-debug.log*
client/yarn-debug.log*
client/yarn-error.log*
